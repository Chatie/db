{
  "compilerOptions": {
    "target": "es6"
    , "module": "commonjs"
    , "outDir": "dist"
    , "declaration": true
    , "sourceMap": true
    , "experimentalDecorators": true
    , "strict": true

    , "noEmitOnError": true

    , "traceResolution": false
    , "lib": [
        "dom"
      , "esnext"
    ]
  }
  , "exclude": [
      "node_modules/"
    , "dist/"
    , "tests/fixtures/"
  ]
  , "include": [
      "bin/*.ts"
    , "examples/**/*.ts"
    , "generated-schemas/**/*.ts"
    , "src/**/*.ts"
    , "scripts/**/*.ts"
    , "tests/**/*.spec.ts"
  ]
}
